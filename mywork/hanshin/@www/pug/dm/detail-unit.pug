body#dm.detail-unit
    include ../layout/_header.pug

    main
        article.banner
            section.breadcrumbs
                ul
                    each val in breadcrumbs
                        li
                            a(href=val.link )=val.title
            section._img
                figure
                    img(src="../../upload/fa2/dm/detail-unit/bannerImg_1670_410.jpg", alt="")
        article.unit
            ul
                each val in unit
                    li(class=(val == unit[1])?"active":"")
                        a(href=val.link)
                            p=val.title
        article.content
            setion.topTitle
                p.en MAKEUP BEAUTY
                p.words 網紅系必修，今年秋冬漂亮彩妝術 ! #吸睛眼妝 #迷情美唇 #完美底妝術
                .buttons 
                    button.active(type="button")
                        span.icon-square
                        p 區塊顯示
                    button(type="button")
                        span.icon-list2
                        p 列表顯示
            section.commercial
                //後端請注意:此處有兩種模式
                    1.大 big (自己一排)
                    2.小 small (兩個一排)
                each val in commercial
                    .box(class=val.className)
                        a(href="../dm/detail.html")
                            figure
                                img.b-lazy(src=blazy data-src=val.img alt="")
            section.product
                //區塊顯示
                .block.active
                    ul
                        each val in product
                            li
                                a(href="../dm/detail.html")
                                    figure
                                        img.b-lazy(src=blazy data-src=val.img , alt="")
                                    if (val.slogan !=="")
                                        // 後端請注意: 下方的slogan如果沒有內容的話 請移除
                                        .slogan(style=("background-color:"+val.sloganBg))
                                            p=val.slogan
                                    h6=val.name
                                    .price
                                        each item in val.price
                                            p=(item+"元")
                .list
                    ul
                        each val in product
                            li
                                a(href="../dm/detail.html")
                                    figure
                                        img.b-lazy(src=blazy data-src=val.img , alt="")
                                    ._text
                                        if (val.slogan !=="")
                                            // 後端請注意: 下方的slogan如果沒有內容的話 請移除
                                            .slogan(style=("background-color:"+val.sloganBg))
                                                p=val.slogan
