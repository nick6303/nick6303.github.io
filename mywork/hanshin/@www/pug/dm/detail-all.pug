body#dm.detail-all
    include ../layout/_header.pug

    main
        article.banner
            section.breadcrumbs
                ul
                    each val in breadcrumbs
                        li
                            a(href=val.link )=val.title
            section._img
                figure
                    img(src="../../upload/fa2/dm/detail-all/bannerImg_1670_410.jpg", alt="")
        article.unit
            ul
                each val in unit
                    li(class=(val == unit[(unit.length - 1)])?"active":"")
                        a(href=val.link)
                            p=val.title
        article.content
            setion.topTitle
                p.en MAKEUP BEAUTY
                form
                    .dropDown.active
                        span.selectMenu
                            p 全部類別
                        ul
                            li 全部類別
                            li 國際精品
                            li 潮流服飾
                            li 美食商店
                            li 休閒主打
                    .dropDown.active
                        span.selectMenu
                            p 全部產品
                        ul
                            li 粉底液 
                            li 唇彩口紅 
                            li 乳液面霜 
                            li 眼部精華
                    .inputArea
                        input(type="text" placeholder="輸入品牌搜尋")
                        // 後端請注意: 下方的onclick 只是展示用 記得要移除 重要的是裡面的function
                        //後端請注意: 搜尋結果出來後 請啟動 hasResult() 這個function 
                        button.icon-magnifier(type="button" onclick="hasResult();")
                p.resultCount 根據您輸入的關鍵字，以下總共有 <b>4</b> 種搜尋結果
                .buttons 
                    button.active(type="button")
                        span.icon-square
                        p 區塊顯示
                    button(type="button")
                        span.icon-list2
                        p 列表顯示
            section.product
                //區塊顯示
                .block.active
                    each x in productType
                        ul
                            .typeName
                                p.ch=x.ch
                                p.en=x.en
                            each val in product
                                li
                                    a(href="../dm/detail.html")
                                        figure
                                            img.b-lazy(src=blazy data-src=val.img , alt="")
                                        if (val.slogan !=="")
                                            // 後端請注意: 下方的slogan如果沒有內容的話 請移除
                                            .slogan(style=("background-color:"+val.sloganBg))
                                                p=val.slogan
                                        h6=val.name
                                        .price
                                            each item in val.price
                                                p=(item+"元")
                .list
                    each x in productType
                        ul
                            .typeName
                                p.ch=x.ch
                                p.en=x.en
                            each val in product
                                li
                                    a(href="../dm/detail.html")
                                        figure
                                            img.b-lazy(src=blazy data-src=val.img , alt="")
                                        ._text
                                            if (val.slogan !=="")
                                                // 後端請注意: 下方的slogan如果沒有內容的話 請移除
                                                .slogan(style=("background-color:"+val.sloganBg))
                                                    p=val.slogan
                                            h6=val.name
                                            .price
                                                each item in val.price
                                                    p=(item+"元")

    include ../layout/_footer.pug

+script
script.
    function hasResult(){
        // 讓提示字出來
        $("main .content .topTitle .resultCount").slideDown(500)
        // 計算有幾個結果
        var count = $("main .content .product .block ul li").length
        // 填入數量
        $("main .content .topTitle .resultCount b").text(count)
        // 重新整理畫面
        $("main .content .topTitle .buttons button").eq(0).addClass("active").siblings().removeClass("active")
        _waypoint.dmW();
        _Blazy.dmW();
    }

