+script
script(id="component" type="text/x-template").
    <li>
        <input type='file' >
        <p></p>
        <button type='button' onclick='remove(this)'>
            <span></span>
        </button>
    </li>
script.
    function upload(target){
        var li = document.querySelector("#component").innerText
        $(target).closest(".inputArea").find("ul").append(li);
        $(target).closest(".inputArea").find("ul li:last-child input").click();
        $(".cooperation .file .inputArea ul li input").change(function(event) {
            var fileName = $(this).val().split('/').pop().split('\\').pop();
            $(this).closest("li").find("p").text(fileName)
            $(".cooperation .content .formContent form .file .inputArea .fileName").mCustomScrollbar("update");
        })

        $(window).off().focus(function(){
            setTimeout(function(){
                $(".cooperation .file .inputArea ul li:last-child").each(function(){
                    if($(this).find("p").text()==""){
                        $(this).remove()
                    }
                })
            },100)
        })
    }

    // 後端請注意: 此處可修改
    function remove(target){
        $(target).closest("li").remove();
        $(".cooperation .content .formContent form .file .inputArea .fileName").mCustomScrollbar("destroy");
        other.scroll();
    }

