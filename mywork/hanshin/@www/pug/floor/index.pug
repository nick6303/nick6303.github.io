+script
script.
    function hasResult(){
        // 讓提示字出來
        $(".index .floorContent ._search .resultCount").slideDown(500)
        // 計算有幾個結果
        var count = $(".index .tableContent .List .sort ul li").length
        // 填入數量
        $(".index .floorContent ._search .resultCount b").text(count)
        // 重新整理畫面
        $(".index .floorContent ._search .buttons button").eq(1).addClass("active").siblings().removeClass("active")
        _waypoint.floorW();
        _Blazy.floorW();
        floor.masonry();
    }

