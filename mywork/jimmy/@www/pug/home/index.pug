body#home.index
    include ../layout/_header.pug
    
    main(id="fullpage")
        article.banner.n-lazy(data-src="../../upload/fa2/home/banner/bannerBg.jpg" data-src-1024="../../upload/fa2/home/banner/bannerBgRWD.jpg")
            section
                ._title
                    h4 開始吧  !
                    p 進入幾米世界，展開奇幻的探索旅程。
                ._img
                    figure.book
                        img(src="../../upload/fa2/home/banner/book.png", alt="")
                    figure.girl
                        img(src="../../upload/fa2/home/banner/girl.png", alt="")
                .seemore
                    a(href=java) 開始探索
        // 最新消息
        article.news
            section.bgImg.n-lazy(data-src="../../upload/fa2/home/news/bg.jpg")
                figure.tree
                    img(src="../../upload/fa2/home/news/tree.png", alt="")
                    img(src="../../upload/fa2/home/news/treeMoon.png", alt="")
                figure.moon
                    img(src="../../upload/fa2/home/news/moon1.png", alt="")
                    img(src="../../upload/fa2/home/news/moon2.png", alt="")
            section.content
                // 側邊slick 使用js自動產生結構
                .sideSlick
                    ul.one
                    ul.two
                ._title
                    p.ch 最新消息
                    p.en Jimmy News
                .mainslick
                    ul
                        each val in news
                            li
                                .date
                                    // 日期
                                    p=val.day
                                    // 年月
                                    p=val.year
                                figure
                                    img(data-lazy=val.img, alt="")
                                .inf
                                    h5=val.title
                                    // 後端請注意: 此處會顯示兩行文字多的會變...
                                    p=val.words
                                a(href=val.link)
                    .arrow
                        span.icon-keyboard_arrow_left
                        span.icon-keyboard_arrow_right
                .seemore
                    a(href=java) All news
            section.stairsAndGirl
                figure.stairBack
                    img(src="../../upload/fa2/home/news/stairBack.png", alt="")
                figure.girl
                    img(src="../../upload/fa2/home/news/girl.png", alt="")
                figure.stairFront
                    img(src="../../upload/fa2/home/news/stairFront.png", alt="")
        // 品牌故事
        article.about
            section.bgImg
                .bg.n-lazy(data-src="../../upload/fa2/home/about/bg.jpg" data-src-1024="../../upload/fa2/home/about/bgPad.jpg" data-src-700="../../upload/fa2/home/about/bgRWD.jpg")
                .stair.n-lazy(data-src="../../upload/fa2/home/about/stair.png")
                .girl
                    figure
                        img(src="../../upload/fa2/home/about/girl.png", alt="")
                .squirrel
                    figure
                        img(src="../../upload/fa2/home/about/squirrel.png", alt="")
            section.aboutJimmy
                ._title
                    p.ch 關於幾米
                    p.en About Jimmy
