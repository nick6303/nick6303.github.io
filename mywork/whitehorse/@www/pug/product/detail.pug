//後端請注意: 下方data-themeColor 請填入這個分館的主題色 同分館的所有頁面都要一樣
body#product.detail(data-themeColor="#3e2820")
    include ../layout/_header.pug

    main
        article.banner
            // 麵包屑 SEO結構化標籤
            section.breadcrumb
                ul(itemscope itemtype="https://schema.org/Product")
                    each val in breadcrumb
                        li(itemprop="name")
                            if val==breadcrumb[4]
                                h1
                                    a(href=val.link itemprop="url")=val.name
                            else
                                a(href=val.link itemprop="url")=val.name
                                span.bgColor
            section._img
                picture
                    // [if IE 9]><video style="display: none;"><![endif]
                    // 後端請注意:手機圖片大小
                    source(srcset="../../upload/fa2/product/detail/bannerImgRWD_1030_1200.jpg" media="(max-width:1024px)")
                    // 後端請注意:電腦圖片大小1920_760
                    img(src="../../upload/fa2/product/detail/bannerImg_1920_760.jpg" alt="")
                // 後端請注意: 須讓客戶選擇文字顏色
                ._text(style="color:#fff")
                    .inf
                        h2 0C63021
                        p.words Between the quiet introversion and the simple taste, feel the touch of every day in my life.
                        .anchor
                            p PLEASE CHOOSE 
                                span.bgColor
                            ul
                                - var anchor = ["Introduction","Using collage","Photographs","Space"]
                                each val in anchor
                                    li=val
                    // 後端請注意: 須讓客戶填入此方塊的寬高比例  
                    .borderBox(data-width="60" data-height="30")
                        span.borderSpan
                            span.top
                            // 大小
                            p 60x30 cm
                            span.bottom
        article.introduction
            section.background(style="background-color:")
                picture
                    // [if IE 9]><video style="display: none;"><![endif]
                    // 後端請注意:手機圖片大小1024_1366
                    source(srcset="" media="(max-width:1024px)")
                    // 後端請注意:電腦圖片大小1920_1080
                    img.b-lazy(src=blazy data-src="" alt="")
            section._title
                h5 introduction
                h6 0C63021 style
                span.bgColor
            section.content
                .collection
                    h6 Item collection
                    each val in collection
                        .box
                            figure
                                // 圖片建議大小 500以上
                                // 後端請注意: 
                                    src放小的圖片
                                    data-largeimg放大的圖片
                                img.b-lazy(src=blazy data-src=val.img, alt="" onclick="product.zoomUp(this)" data-largeimg=val.img)
                                
                            ._text
                                p.name=val.name
                                p.size=val.size
                                .favor
                                    button(type="button" onclick="this.parentNode.classList.toggle('active')")
                                        span.textColor
                .Specification
                    .box
                        .buttons
                            // 後端請注意: 如果已經加入到我的最愛 請在下方div加上class "active"
                            .favor
                                button(type="button" onclick="this.parentNode.classList.toggle('active')")
                                    span.textColor
                                    p FAVORITES LIST
                            .share
                                button
                                    span.icon-share2.textColor
                                    p SHARE
                                ul
                                    li
                                        a(href=java)
                                            span.icon-facebook(style="color:#3b5998")
                                    li
                                        a(href=java)
                                            span.icon-line(style="color:#00c300")
                                    li
                                        a(href=java)
                                            span.icon-twitter(style="color:#00aced")
                        .awards
                            h6 Specification
                            img(src="../../upload/fa2/product/detail/awardImg_90_30.png", alt="")
                        table
                            tbody
                                tr
                                    td Tile size
                                    td cm
                                    td 30 x 60
                                tr
                                    td Thickness
                                    td mm
                                    td 6
                                tr
                                    td Packing
                                    td pcs / box
                                    td 8
                                tr
                                    td Classification
                                    td 
                                        img(src="../../upload/fa2/product/detail/classification.png", alt="")
                                    td v3
                                        // 後端請注意:請在下方data-src填入燈箱資料的位置
                                        button(type="button" onclick="product.classification(this)" data-src="../product/classification.html") 說明
                                tr
                                    td Construction
                                    td pcs / m2
                                    td 12
                        .ps
                            p This product is not repaired with magnetic tiles, with 35m construction with standard stronger resistance.
                            p With construction with standard stronger resistance.
                        
            section.texture
                h6 0C63021 texture
                p Each stone has a special grain, in order to clearly distinguish the difference of the brick surface, provide pictures.
                ul
                    -for(var i=0;i<4;i++)
                        li
                            //圖片大小420*720
                            // 後端請注意: 
                                src放小的圖片
                                data-largeimg放大的圖片
                            img(src="../../upload/fa2/product/detail/bannerImgRWDsmall_1030_1200.jpg", alt="" onclick="product.zoomUp(this)" data-largeimg="../../upload/fa2/product/detail/bannerImgRWD_1030_1200.jpg")
        article.collage
            section.background(style="background-color: #f7f7f7")
                picture
                    // [if IE 9]><video style="display: none;"><![endif]
                    // 後端請注意:手機圖片大小1024_1366
                    source(srcset="" media="(max-width:1024px)")
                    // 後端請注意:電腦圖片大小1920_1080
                    img.b-lazy(src=blazy data-src="" alt="")
            section._title
                h5 Using collage
                h6 Tile paving method
                span.bgColor
                p A home style, tile collage becomes a home space magician, offering you several suggested methods
            section.content
                figure
                    img(alt="" onclick="product.zoomUp(this)")
                ._text
                    ul
                        // 後端請注意: 第一個li要有class "active"
                        each val in collage
                            li(class=(val==collage[0])?"active":"")
                                ._img
                                    // 圖片建議大小600*760
                                    // 後端請注意: 
                                        src放小的圖片
                                        data-largeimg放大的圖片
                                    img(src=val.img, alt="" data-largeimg=val.img)
                                .inf
                                    // 排列顯示方式圖片 圖片建議大小 50*50
                                    img(src=val.icon, alt="")
                                    p=val.name
        article.photographs
            section.background(style="background-color:#f0f0f0")
                picture
                    // [if IE 9]><video style="display: none;"><![endif]
                    // 後端請注意:手機圖片大小1024_1366
                    source(srcset="" media="(max-width:1024px)")
                    // 後端請注意:電腦圖片大小1920_1080
                    img.b-lazy(src=blazy data-src="" alt="")
            section._title
                h5 photographs
                h6 Creative environment
                span.bgColor
                p With the effect of rock surface molding and the whole body design, the color table is the same, the imitation stone effect.
            section.masonry
                .grid-sizer
                //後端請注意:此處有三種模式: 請填入相對應的class 及圖片大小 (非強制大小 但要比他大 否則會需要放大 會變模糊)
                    1.橫向 horizontal 圖片建議大小 845*345 
                    2.直向 vertical 圖片建議大小 420*695
                    3.正方 square 圖片建議大小 420*345
                each val in photographs
                    // 後端請注意: 下方data-src請放燈箱資料的位置
                    .box(class=val.className data-src="../product/photoLibox.html")
                        figure
                            img.b-lazy(src=blazy data-src=val.img, alt="")
        article.space
            section.background(style="background-color:")
                picture
                    // [if IE 9]><video style="display: none;"><![endif]
                    // 後端請注意:手機圖片大小1024_1366
                    source(srcset="" media="(max-width:1024px)")
                    // 後端請注意:電腦圖片大小1920_1080
                    img.b-lazy(src=blazy data-src="" alt="")
            section._title
                h5 space
                h6 Applicable place
                    span.bgColor
                p With a large-size design, the definition of home is defined by  living atmosphere the depth of space.
            section._slick
                ul
                    each val in space
                        li
                            a(href="../space/detail.html")
                                figure
                                    // 後端請注意:此處圖片與 space/index.html的圖片共用
                                    img(data-lazy=val.img, alt="")
                                // 後端請注意: 須讓客戶選擇文字顏色
                                ._text(style=(val.whiteOne=="true")?"color:#fff":"")
                                    p.name=val.name
                                    p.tpye=val.type
                                // 裝飾方塊
                                span
                .arrows
                    span.icon-triangle_left
                    span.icon-triangle_right
        article.recommend
            section.background(style="background-color: #fff")
                picture
                    // [if IE 9]><video style="display: none;"><![endif]
                    // 後端請注意:手機圖片大小1024_1366
                    source(srcset="" media="(max-width:1024px)")
                    // 後端請注意:電腦圖片大小1920_1080
                    img.b-lazy(src=blazy data-src="" alt="")
            section._title
                h5 recommend
                h6 May also like other color
                    span.bgColor
            section._slick
                ul
                    each val in product
                        // 後端請注意: 須讓客戶選擇文字顏色
                        li(style=(val.whiteOne=="true")?"color:#fff":"")
                            .block
                                a(href="../product/detail.html" style="width: 50%")
                                    figure
                                        // 後端請注意:圖片跟 product/series.html 的共用
                                        img(data-lazy=val.img, alt="")
                                    p=val.number
                .arrows
                    span.icon-triangle_left
                    span.icon-triangle_right


