    main
        article.banner
            section.content
                ._img
                    figure.lefthorse
                        img(src="../../upload/fa2/whitehorsebaby/bannerLeftHorse_500_310.png", alt="")
                    figure.righthorse
                        img(src="../../upload/fa2/whitehorsebaby/bannerRightHorse.png", alt="")
