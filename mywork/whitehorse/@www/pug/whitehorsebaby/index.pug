                    figure.butterfly2
                        img(src="../../upload/fa2/whitehorsebaby/bannerButterFly2_70_90.png", alt="")
                    figure.flower
                        img(src="../../upload/fa2/whitehorsebaby/bannerFlower_255_200.png", alt="")
                ._title(style="background-image:url('../../upload/fa2/whitehorsebaby/bannerImg_1920_540.jpg')")
