body(id="news" class="index")
    include ../layout/_header.pug
    
    main
        article.bg
        article.content
            section._title
                p Latest news
            section.masonryBox
                ul
                    .grid-sizer
                    // 後端請注意:此處有三種樣式 1.大 big  2.中 middle  3.小 small 請在li中加上相對應的 class
                    li.big
                        a(href="detail.html")
                            figure
                                img.b-lazy(src="../../assets/img/blazy_blank.svg" data-src="../../upload/fa2/news/index/big1_790_680.jpg")
                            ._text
                                p Inspiration
                    li.small
                        a(href="detail.html")
                            figure
                                img.b-lazy(src="../../assets/img/blazy_blank.svg" data-src="../../upload/fa2/news/index/small1_395_340.jpg")
                            ._text
                                p New products
                    li.small
                        a(href="detail.html")
                            figure
                                img.b-lazy(src="../../assets/img/blazy_blank.svg" data-src="../../upload/fa2/news/index/small2_395_340.jpg")
                            ._text
                                p The space
                    li.middle
                        a(href="detail.html")
                            figure
                                img.b-lazy(src="../../assets/img/blazy_blank.svg" data-src="../../upload/fa2/news/index/middle1_790_340.jpg")
                            ._text
                                p Archived

    include  ../layout/_footer.pug
