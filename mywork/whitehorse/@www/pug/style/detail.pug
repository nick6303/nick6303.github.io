//後端請注意: 下方data-themeColor 請填入這個分館的主題色 同分館的所有頁面都要一樣
body#style.detail(data-themeColor="#3e2820")
    include ../layout/_header.pug

    main
        article.banner 

            // 麵包屑 SEO結構化標籤
            section.breadcrumb
                ul(itemscope itemtype="https://schema.org/Product")
                    each val in breadcrumb
                        li(itemprop="name")
                            if val==breadcrumb[2]
                                h1
                                    a(href=val.link itemprop="url")=val.name
                            else
                                a(href=val.link itemprop="url")=val.name
                                span.bgColor
            section._slick
                //- picture
                //-     // [if IE 9]><video style="display: none;"><![endif]
                //-     // 後端請注意:手機圖片大小 900*1200
                //-     source(srcset="../../upload/fa2/style/detail/bannerImgRWD_900_1200.jpg" media="(max-width:1024px)")
                //-     // 後端請注意:電腦圖片大小1800_650
                //-     img.b-lazy(src=blazy data-src="../../upload/fa2/style/detail/bannerImg_1800_650.jpg" alt="")
                //- // 後端請注意: 此處須讓客戶選擇文字顏色
                //- ._text(style="color:#fff")
                //-     h2 Japanese style
                //-     p Natural texture lines and warm tones soften the space and create a harmonious and moving posture.
                ul
                    -for(var i = 0 ;i<2;i++)
                        li
                            picture
                                // [if IE 9]><video style="display: none;"><![endif]
                                // 後端請注意:手機圖片大小 900*1200
                                source(srcset="../../upload/fa2/style/detail/bannerImgRWD_900_1200.jpg" media="(max-width:1024px)")
                                // 後端請注意:電腦圖片大小1800_650
                                img(src="../../upload/fa2/style/detail/bannerImg_1800_650.jpg" alt="")
                            // 後端請注意: 此處須讓客戶選擇文字顏色
                            //- ._text(style="color:#fff")
                            //-     h2 Japanese style
                            //-     p Natural texture lines and warm tones soften the space and create a harmonious and moving posture.
                            ._text
                                h2 Japanese style
                                h6 dfdsfdfsdf
                                .inf
                                    each item in bannerSlick
                                        .type
                                            figure
                                                img(src="../../upload/fa2/space/detail/img1_100_100.jpg", alt="")
                                            .name
                                                p=item.name
                                            .numb
                                                if (i == 0)
                                                    -for(var x =0;x<12;x++)
                                                        p=item.numb
                                                else                                                
                                                    -for(var x =0;x<2;x++)
                                                        p=item.numb
                .arrows
                    button.left(type="button")
                    button.right(type="button")
            section.scrollDown
                span
                p SCROLL
        article.content
            section.background(style="background-color:")
                picture
                    // [if IE 9]><video style="display: none;"><![endif]
                    // 後端請注意:手機圖片大小1024_1366
                    source(srcset="" media="(max-width:1024px)")
