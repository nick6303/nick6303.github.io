                            figure
                                img.b-lazy(src=blazy data-src=val.img, alt="")
                            p.size=val.size
        artcile.recommend
            section.background(style="background-color:")
                picture
                    // [if IE 9]><video style="display: none;"><![endif]
                    // 後端請注意:手機圖片大小
                    source(srcset="" media="(max-width:1024px)")
                    // 後端請注意:電腦圖片大小1920_1080
                    img.b-lazy(src=blazy data-src="../../upload/fa2/home/brandsBg4_1920_1080.jpg" alt="")
            section.content
                ._title
                    h5 recommend
                    h6 See more style
                        span.bgColor
                ._slick
                    ul
                        each val in style
                            li
                                a(href="../style/detail.html")
                                    figure
                                        img(data-lazy=val.img, alt="")
                                    p=(val.name+" style")
                    .arrows
