                    img.b-lazy(src=blazy data-src="../../upload/fa2/style/index/bannerBg_1920_1080.jpg" alt="")
            // 麵包屑 SEO結構化標籤
            section.breadcrumb
                ul(itemscope itemtype="https://schema.org/Product")
                    each val in breadcrumb
                        li(itemprop="name")
                            if val==breadcrumb[1]
                                h1
                                    a(href=val.link itemprop="url")=val.name
                            else
                                a(href=val.link itemprop="url")=val.name
                                span.bgColor
            section._title
                h6 Style aspect
                p It’s the highest quality standard in the world enjoy the good life in the security fortress constructed.
            section.anchor
                h6 overview
                ul
                    each val in style
                        li
                            p=val.name
                            span.bgColor
        article.content
            section.background(style="background-color:#fff")
                picture
                    // [if IE 9]><video style="display: none;"><![endif]
                    // 後端請注意:手機圖片大小1024_1366
                    source(srcset="" media="(max-width:1024px)")
